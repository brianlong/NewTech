%h2.bar_title
  %span.title
    Upcoming Events
  %ul.social
    %li
      %a{:href => "https://plus.google.com/u/0/communities/112853241608609044498", :target => "_blank"}
        %img{:src => "assets/g.png"}
    %li
      %a{:href => "http://www.twitter.com/bdnt", :target => "_blank"}
        %img{:src => "assets/twitter.png"}
    %li
      %a{:href => "http://www.facebook.com/bdnewtech", :target => "_blank"}
        %img{:src => "assets/facebook.png"}
    %li
      %a{:href => "http://www.linkedin.com/groups/Boulder-Denver-New-Tech-BDNT-134062/about", :target => "_blank"}
        %img{:src => "assets/linkedin.png"}
    %li
      %a{:href => "#", :id => "events_switch"}
        %img{:src => "assets/close.png"}
%div
  %ul.event-list#event-slider.liquid-slider
    - idx = 0
    - events = events_with_groups(@events, 3)
    - events.each do |event_arr|
      %section
        - event_arr.each do |event|
          = render 'partial_templates/event_item', event: event

= content_for :javascripts do
  = javascript_include_tag "jquery.easing.1.3"
  = javascript_include_tag "jquery.liquid-slider.min"
  = javascript_include_tag "jquery.touchSwipe.min"

  :javascript
    $(window).load(function(){
      $('#event-slider').css('display','block');
      $('#event-slider').liquidSlider();
      $('#event-slider').css('height','42px');
    });
    $(document).ready(function(){
      
    })