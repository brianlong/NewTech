<%= semantic_form_for [:admin, @user] do |f| %>
    <%= f.inputs :name => "User Info" do %>
        <%= f.input :roles, :as => :check_boxes, :collection => Role.all, :selected => @user.roles %>
        <%= f.input :username %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
    <% end %>
    <%= f.actions %>
<% end %>