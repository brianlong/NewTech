= simple_form_for(@company, :validate => true, :html => {:class => 'form-horizontal' }) do |f|
  .span12.new_company
    .span6
      .well
        .form-inputs.row
          = f.input :name, :label => "Company Name", :as => :string
          = f.simple_fields_for :offices do |office|
            = office.input :address1, :label => "Address", :as => :string
            = office.association :city
            = office.input :zip_code,  :as => :string
          = f.input :email_address, :as => :string
          = f.input :founded_year, :as => :string
          = f.input :description
      .well
        %span Investment
        = f.association :investments_type, as: :radio_buttons, item_wrapper_class: 'inline'
      .well.current-employees-count
        %span Current Employee Count
        = f.association :employees_type, as: :radio_buttons, item_wrapper_class: 'inline', :label => ""
    .span5
      .well.hiring
        %span Hiring
        = f.input :hiring, as: :radio_buttons, item_wrapper_class: 'inline', :label => "Hiring in the next 30 days"
      .well
        %span Images
        = f.input :image, :label => "Logo"
      .well
        .form-inputs.row
          = f.input :homepage_url, :as => :string
          = f.input :twitter, :as => :string
          = f.input :facebook, :as => :string
          = f.input :jobs_url, :as => :string
    %br
    .control-group
      .controls
        .actions
          = f.submit 'Save', class: "btn btn-success"


