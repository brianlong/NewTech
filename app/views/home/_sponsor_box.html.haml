#sponsor-heading
  %h4 
    = link_to 'SPONSOR', sponsor_view_path
- unless @sponsor.blank?
  #sponsor-logo
    = link_to (image_tag @sponsor.get_image, :width => '50px', :height => '50px'), url_with_protocol(@sponsor.url), :target => '_blank'
  #sponsor-name
    %h3
      = link_to @sponsor.name, url_with_protocol(@sponsor.url), :target => '_blank'